<div class='flex flex-col min-h-screen mt-4'>
  <div class='flex-none bg-white'>
    <div class="py-2">
      <h3 class="text-sm font-bold text-gray-400 my-2">
        DATA UPLOADS
      </h3>

      <%= form_with url: uploads_path, multipart: true, local: true do |f| %>
        <%= f.select :upload_type, [
              ['Gameweek Data', :gameweek_data],
              ['ETR Projection Set', :etr_projection_set]
            ] %>
        <%= f.file_field :file %>
        <%= f.collection_select :gameweek_id, Gameweek.all, :id, :week_number %>
        <%= f.submit 'Submit',
                     class: 'cursor-pointer hover:bg-green-400 py-2 px-4 rounded-full
                             bg-green-300 text-green-900 text-center align-middle font-semibold' %>
      <% end %>
    </div>
  </div>
</div>
