<%= form_with url: player_pool_entry_path(entry.id),
              html: { method: :delete },
              remote: true do |f| %>
  <%= f.submit "-", class: "mx-1 h-8 w-8 rounded bg-purple-800 text-white text-center align-middle font-black" %>
<% end %>

<%= form_with model: entry,
              remote: true do |f| %>
  <%= f.hidden_field :is_locked, value: !entry.is_locked %>
  <%= f.submit (entry.is_locked ? 'U' : 'L'),
               class: "h-8 w-8 rounded bg-yellow-700 text-white text-center align-middle font-black" %>
<% end %>
